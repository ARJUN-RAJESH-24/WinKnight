<Window x:Class="WinKnightUI.BSODAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BSOD Analysis - System Crash History"
        Height="600" Width="900"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#0B1A31"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0B1A31"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#182A41"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3498DB"/>
        <SolidColorBrush x:Key="FontPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="FontSecondary" Color="#8796A6"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F1C40F"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#2ECC71"/>

        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ChromeButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource FontPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="{StaticResource BackgroundBrush}">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="💥" FontSize="28" Margin="0,0,10,0"/>
                    <TextBlock Text="BSOD Analysis" 
                               Foreground="{StaticResource FontPrimary}"
                               FontSize="26"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Width="30" Height="30" Content="×" 
                        Click="Close_Click" 
                        Style="{StaticResource ChromeButton}"
                        HorizontalAlignment="Right"/>
            </Grid>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Summary Card -->
                    <Border Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <TextBlock Text="Summary" 
                                       Foreground="{StaticResource FontPrimary}" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Total Crashes" Foreground="{StaticResource FontSecondary}" FontSize="12"/>
                                    <TextBlock x:Name="TotalCrashesText" Text="0" Foreground="{StaticResource FontPrimary}" FontSize="32" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Last 7 Days" Foreground="{StaticResource FontSecondary}" FontSize="12"/>
                                    <TextBlock x:Name="RecentCrashesText" Text="0" Foreground="{StaticResource WarningBrush}" FontSize="32" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Last Crash" Foreground="{StaticResource FontSecondary}" FontSize="12"/>
                                    <TextBlock x:Name="LastCrashTimeText" Text="Never" Foreground="{StaticResource FontPrimary}" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Crash History -->
                    <Border Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <TextBlock Text="Crash History (Last 30 Days)" 
                                       Foreground="{StaticResource FontPrimary}" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,15"/>

                            <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="CrashHistoryList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#1A2538" 
                                                    CornerRadius="8" 
                                                    Padding="15" 
                                                    Margin="0,0,0,10">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                                        <TextBlock Text="⚠️ " FontSize="14"/>
                                                        <TextBlock Text="{Binding TimeAgo}" 
                                                                   Foreground="{StaticResource FontPrimary}" 
                                                                   FontSize="14" 
                                                                   FontWeight="SemiBold"/>
                                                        <TextBlock Text=" - " 
                                                                   Foreground="{StaticResource FontSecondary}" 
                                                                   FontSize="12" 
                                                                   Margin="5,0"/>
                                                        <TextBlock Text="{Binding FullDate}" 
                                                                   Foreground="{StaticResource FontSecondary}" 
                                                                   FontSize="12"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Row="1" 
                                                               Text="{Binding StopCode}" 
                                                               Foreground="{StaticResource WarningBrush}" 
                                                               FontFamily="Consolas" 
                                                               FontSize="13" 
                                                               Margin="0,0,0,8"/>

                                                    <TextBlock Grid.Row="2" 
                                                               Text="{Binding Description}" 
                                                               Foreground="{StaticResource FontSecondary}" 
                                                               FontSize="11" 
                                                               TextWrapping="Wrap"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <TextBlock x:Name="NoCrashesText" 
                                       Text="✓ No crashes detected in the last 30 days. Your system is stable!" 
                                       Foreground="{StaticResource SuccessBrush}" 
                                       FontSize="14" 
                                       TextAlignment="Center" 
                                       Margin="0,20"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                    <!-- Recommendations -->
                    <Border Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <TextBlock Text="Recommendations" 
                                       Foreground="{StaticResource FontPrimary}" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,15"/>

                            <StackPanel x:Name="RecommendationsPanel">
                                <!-- Recommendations will be added dynamically -->
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>