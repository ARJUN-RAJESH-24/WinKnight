<Window x:Class="WinKnightUI.TempGraphPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Temperature Monitor"
        Height="550" Width="900"
        MinHeight="450" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#0B1A31"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0B1A31"/>
        <SolidColorBrush x:Key="CardBackground" Color="#182A41"/>
        <SolidColorBrush x:Key="GraphBackground" Color="#0F1F35"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#8796A6"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3498DB"/>
        <SolidColorBrush x:Key="GridLine" Color="#1E3A5F"/>

        <Style x:Key="PopupCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="25"/>

            <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PopupChromeButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RefreshButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5DADE2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource GraphBackground}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        </Style>
    </Window.Resources>

    <Border Style="{StaticResource PopupCard}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🌡️" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Temperature Monitor" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="2" Width="30" Height="30" Content="—" Style="{StaticResource PopupChromeButton}" Click="Minimize_Click"/>
                <Button Grid.Column="3" Width="30" Height="30" Content="▢" Style="{StaticResource PopupChromeButton}" Margin="6,0" Click="MaxRestore_Click"/>
                <Button Grid.Column="4" Width="30" Height="30" Content="×" Style="{StaticResource PopupChromeButton}" Click="Close_Click"/>
            </Grid>

            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="CPU" Foreground="{StaticResource SecondaryText}" FontSize="11" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="#E74C3C" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="CpuCurrentTemp" Text="--°C" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Min: " Foreground="{StaticResource SecondaryText}" FontSize="10"/>
                            <TextBlock x:Name="CpuMinTemp" Text="--°C" Foreground="{StaticResource SecondaryText}" FontSize="10"/>
                            <TextBlock Text=" | Max: " Foreground="{StaticResource SecondaryText}" FontSize="10" Margin="5,0,0,0"/>
                            <TextBlock x:Name="CpuMaxTemp" Text="--°C" Foreground="{StaticResource SecondaryText}" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="GPU" Foreground="{StaticResource SecondaryText}" FontSize="11" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="#3498DB" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="GpuCurrentTemp" Text="--°C" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Min: " Foreground="{StaticResource SecondaryText}" FontSize="10"/>
                            <TextBlock x:Name="GpuMinTemp" Text="--°C" Foreground="{StaticResource SecondaryText}" FontSize="10"/>
                            <TextBlock Text=" | Max: " Foreground="{StaticResource SecondaryText}" FontSize="10" Margin="5,0,0,0"/>
                            <TextBlock x:Name="GpuMaxTemp" Text="--°C" Foreground="{StaticResource SecondaryText}" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="System" Foreground="{StaticResource SecondaryText}" FontSize="11" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="#2ECC71" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="SystemCurrentTemp" Text="--°C" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Min: " Foreground="{StaticResource SecondaryText}" FontSize="10"/>
                            <TextBlock x:Name="SystemMinTemp" Text="--°C" Foreground="{StaticResource SecondaryText}" FontSize="10"/>
                            <TextBlock Text=" | Max: " Foreground="{StaticResource SecondaryText}" FontSize="10" Margin="5,0,0,0"/>
                            <TextBlock x:Name="SystemMaxTemp" Text="--°C" Foreground="{StaticResource SecondaryText}" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Button Grid.Column="3" Content="🔄 Refresh" Style="{StaticResource RefreshButton}" Click="Refresh_Click" 
                        VerticalAlignment="Center" Margin="10,0,0,0" Padding="15,8"/>
            </Grid>

            <Border Grid.Row="2" Background="{StaticResource GraphBackground}" CornerRadius="10" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                        <Border Background="#2ECC7133" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                            <TextBlock Text="Normal (&lt;60°C)" FontSize="10" Foreground="#2ECC71"/>
                        </Border>
                        <Border Background="#F1C40F33" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                            <TextBlock Text="Warm (60-80°C)" FontSize="10" Foreground="#F1C40F"/>
                        </Border>
                        <Border Background="#E74C3C33" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="Critical (&gt;80°C)" FontSize="10" Foreground="#E74C3C"/>
                        </Border>
                    </StackPanel>

                    <Canvas x:Name="GraphCanvas" Grid.Row="1" Background="#0A1520" ClipToBounds="True">
                        <Canvas x:Name="GridCanvas"/>
                    </Canvas>

                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="60s ago" Foreground="{StaticResource SecondaryText}" FontSize="10" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="1" Text="30s ago" Foreground="{StaticResource SecondaryText}" FontSize="10" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Now" Foreground="{StaticResource SecondaryText}" FontSize="10" HorizontalAlignment="Right"/>
                    </Grid>
                </Grid>
            </Border>

            <Grid Grid.Row="3" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <Ellipse Width="12" Height="12" Fill="#E74C3C" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="CPU" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <Ellipse Width="12" Height="12" Fill="#3498DB" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="GPU" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="12" Height="12" Fill="#2ECC71" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="System" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="1" x:Name="UpdateTimeText" Text="Updated: --" 
                           Foreground="{StaticResource SecondaryText}" FontSize="11" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Border>
</Window>