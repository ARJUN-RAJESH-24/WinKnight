<Window x:Class="WinKnightUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Guardian"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="700"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <!-- Windows 11 Color Palette -->
        <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="AccentLightBrush" Color="#106EBE"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F3F3F3"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#323130"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#605E5C"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E1DFDD"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#D83B01"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Indicator Style -->
        <Style x:Key="StatusDot" TargetType="Ellipse">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ... (Title Bar and other code unchanged) ... -->

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
                <!-- FIX: Remove Spacing property, use Margin on child elements instead -->
                <StackPanel>
                    <!-- Add Margin="0,0,0,20" to each direct child for spacing -->
                    
                    <!-- System Status Overview -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                        <!-- ... (unchanged) ... -->
                    </Border>

                    <!-- Main Feature Cards -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Event Monitor & Restore Points -->
                        <Border Grid.Column="0" Style="{StaticResource Card}">
                            <StackPanel>
                                <Grid Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="📋 Event Monitor" FontSize="16" FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                                        <TextBlock Text="Automated restore point creation" FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <ToggleButton HorizontalAlignment="Right" VerticalAlignment="Top"
                                                  Width="40" Height="20" IsChecked="True">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="Border" CornerRadius="10" Background="#E1DFDD" Width="40" Height="20">
                                                    <Ellipse x:Name="Thumb" Width="16" Height="16" Fill="White" 
                                                             HorizontalAlignment="Left" Margin="2,0"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                                        <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                </Grid>

                                <Border Background="#F8F9FA" CornerRadius="6" Padding="16" Margin="0,0,0,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Monitored Events" FontWeight="SemiBold" FontSize="14" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="• Critical system errors (ID: 1001)" FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,2"/>
                                            <TextBlock Text="• Application crashes (ID: 1000)" FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,2"/>
                                            <TextBlock Text="• Service failures (ID: 7034)" FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="3" FontSize="20" FontWeight="Bold" 
                                                   Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="12" FontSize="18" FontWeight="Bold" 
                                                   Foreground="{StaticResource AccentBrush}"/>
                                        <TextBlock Text="Restore points" FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="2h ago" FontSize="18" FontWeight="Bold" 
                                                   Foreground="{StaticResource SuccessBrush}"/>
                                        <TextBlock Text="Last created" FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Grid>

                                <Button Content="Create Manual Restore Point" Style="{StaticResource ModernButton}" 
                                        HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                                <Button Content="Configure Events" Background="Transparent" 
                                        Foreground="{StaticResource AccentBrush}" BorderThickness="1" 
                                        BorderBrush="{StaticResource AccentBrush}" HorizontalAlignment="Stretch"
                                        Padding="16,8" FontWeight="SemiBold">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F0F8FF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- BSOD Detection & Auto Repair -->
                        <Border Grid.Column="2" Style="{StaticResource Card}">
                            <StackPanel>
                                <Grid Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="🔧 Auto Repair" FontSize="16" FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                                        <TextBlock Text="BSOD detection &amp; system repair" FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <ToggleButton HorizontalAlignment="Right" VerticalAlignment="Top"
                                                  Width="40" Height="20" IsChecked="True">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="Border" CornerRadius="10" Background="#E1DFDD" Width="40" Height="20">
                                                    <Ellipse x:Name="Thumb" Width="16" Height="16" Fill="White" 
                                                             HorizontalAlignment="Left" Margin="2,0"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                                        <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                </Grid>

                                <Border Background="#FFF8F0" CornerRadius="6" Padding="16" Margin="0,0,0,16"
                                        BorderBrush="{StaticResource WarningBrush}" BorderThickness="1">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="⚠️" FontSize="14" Margin="0,0,8,0"/>
                                            <TextBlock Text="Recent BSOD Detected" FontWeight="SemiBold" 
                                                       Foreground="{StaticResource WarningBrush}"/>
                                        </StackPanel>
                                        <TextBlock Text="SYSTEM_SERVICE_EXCEPTION" FontSize="12" FontFamily="Consolas"
                                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                        <TextBlock Text="Auto-repair initiated: DISM + SFC scan" FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Border>

                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="2" FontSize="18" FontWeight="Bold" 
                                                   Foreground="{StaticResource WarningBrush}"/>
                                        <TextBlock Text="BSODs detected" FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="95%" FontSize="18" FontWeight="Bold" 
                                                   Foreground="{StaticResource SuccessBrush}"/>
                                        <TextBlock Text="Repair success" FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Grid>

                                <Button Content="Run Manual Scan" Style="{StaticResource ModernButton}" 
                                        HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                                <Button Content="View BSOD History" Background="Transparent" 
                                        Foreground="{StaticResource AccentBrush}" BorderThickness="1" 
                                        BorderBrush="{StaticResource AccentBrush}" HorizontalAlignment="Stretch"
                                        Padding="16,8" FontWeight="SemiBold">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F0F8FF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Recent Activity Log -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="📊 Recent Activity" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                            <ItemsControl>
                                <Border Background="#F8F9FA" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="6" Height="6" Fill="{StaticResource SuccessBrush}" Margin="0,0,12,0"/>
                                            <TextBlock Text="Restore point created automatically" FontWeight="SemiBold" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                        <TextBlock Text="2:30 PM" FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>

                                <Border Background="#F8F9FA" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="6" Height="6" Fill="{StaticResource WarningBrush}" Margin="0,0,12,0"/>
                                            <TextBlock Text="BSOD detected, auto-repair completed" FontWeight="SemiBold" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                        <TextBlock Text="11:45 AM" FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>

                                <Border Background="#F8F9FA" CornerRadius="6" Padding="12">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="6" Height="6" Fill="{StaticResource AccentBrush}" Margin="0,0,12,0"/>
                                            <TextBlock Text="Event monitoring started" FontWeight="SemiBold" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                        <TextBlock Text="9:00 AM" FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>