<Window x:Class="WinKnightUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Guardian"
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="CanResize"
        MinHeight="550" MinWidth="800"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <!-- HyperOS + iOS Inspired Color Palette -->
        <SolidColorBrush x:Key="AccentBrush" Color="#007AFF"/>
        <SolidColorBrush x:Key="AccentLightBrush" Color="#5AC8FA"/>
        <SolidColorBrush x:Key="AccentDarkBrush" Color="#0051D5"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F2F1F6"/>
        <SolidColorBrush x:Key="GlassBackgroundBrush" Color="#E8F4FD"/>
        <SolidColorBrush x:Key="CardGlassBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1D1D1F"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#86868B"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#C6C6C8"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#34C759"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FF9500"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#FF3B30"/>

        <!-- Glass Effect Gradients -->
        <LinearGradientBrush x:Key="GlassGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#CCFFFFFF" Offset="0"/>
            <GradientStop Color="#88FFFFFF" Offset="0.5"/>
            <GradientStop Color="#44FFFFFF" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGlassGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#EEFFFFFF" Offset="0"/>
            <GradientStop Color="#BBFFFFFF" Offset="0.3"/>
            <GradientStop Color="#99FFFFFF" Offset="1"/>
        </LinearGradientBrush>

        <!-- iOS Style Button -->
        <Style x:Key="iOSButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#007AFF" Opacity="0.3" ShadowDepth="0" BlurRadius="20"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentDarkBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Glass Card Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGlassGradient}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.08" ShadowDepth="8" BlurRadius="32"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Frosted Glass Overlay -->
        <Style x:Key="FrostedGlass" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource GlassGradient}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <BlurEffect Radius="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- HyperOS Toggle Switch -->
        <Style x:Key="HyperOSToggle" TargetType="ToggleButton">
            <Setter Property="Width" Value="52"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border" CornerRadius="16" Background="#E5E5E7" Width="52" Height="32">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                            </Border.Effect>
                            <Ellipse x:Name="Thumb" Width="28" Height="28" Fill="White" 
                                     HorizontalAlignment="Left" Margin="2,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="2" BlurRadius="4"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Indicator -->
        <Style x:Key="StatusIndicator" TargetType="Border">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{Binding Background.Color, RelativeSource={RelativeSource Self}}" 
                                      Opacity="0.6" ShadowDepth="0" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Background with gradient -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Glass Container -->
        <Border Style="{StaticResource FrostedGlass}" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Glass Title Bar -->
                <Border Grid.Row="0" Background="{StaticResource GlassGradient}" 
                        CornerRadius="20,20,0,0" BorderThickness="0,0,0,1" 
                        BorderBrush="#22FFFFFF">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="32,0">
                            <!-- App Icon with Glow -->
                            <Border Background="{StaticResource AccentBrush}" CornerRadius="12" 
                                    Width="32" Height="32" Margin="0,0,16,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#007AFF" Opacity="0.5" ShadowDepth="0" BlurRadius="16"/>
                                </Border.Effect>
                                <TextBlock Text="🛡️" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel>
                                <TextBlock Text="System Guardian" FontSize="18" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Automated PC Protection" FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Window Controls -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,24,0">
                            <Border Background="#FF5F56" CornerRadius="8" Width="16" Height="16" Margin="4">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF5F56" Opacity="0.4" ShadowDepth="0" BlurRadius="8"/>
                                </Border.Effect>
                            </Border>
                            <Border Background="#FFBD2E" CornerRadius="8" Width="16" Height="16" Margin="4">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FFBD2E" Opacity="0.4" ShadowDepth="0" BlurRadius="8"/>
                                </Border.Effect>
                            </Border>
                            <Border Background="#27CA3F" CornerRadius="8" Width="16" Height="16" Margin="4">
                                <Border.Effect>
                                    <DropShadowEffect Color="#27CA3F" Opacity="0.4" ShadowDepth="0" BlurRadius="8"/>
                                </Border.Effect>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Content with Glass Background -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24" 
                              Background="Transparent">
                    <StackPanel>

                        <!-- System Status Glass Panel -->
                        <Border Style="{StaticResource GlassCard}" Margin="0,0,0,24">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Style="{StaticResource StatusIndicator}" 
                                                Background="{StaticResource SuccessBrush}"/>
                                        <TextBlock Text="System Health" FontWeight="SemiBold" FontSize="16"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <TextBlock Text="All systems operational" FontSize="13" 
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Style="{StaticResource StatusIndicator}" 
                                                Background="{StaticResource AccentBrush}"/>
                                        <TextBlock Text="Event Monitor" FontWeight="SemiBold" FontSize="16"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <TextBlock Text="Active • 247 events today" FontSize="13" 
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Style="{StaticResource StatusIndicator}" 
                                                Background="{StaticResource SuccessBrush}"/>
                                        <TextBlock Text="Auto-Repair" FontWeight="SemiBold" FontSize="16"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <TextBlock Text="Ready • Last run: 2h ago" FontSize="13" 
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Feature Cards with Glass Effect -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Event Monitor Glass Card -->
                            <Border Grid.Column="0" Style="{StaticResource GlassCard}">
                                <StackPanel>
                                    <Grid Margin="0,0,0,24">
                                        <StackPanel>
                                            <TextBlock Text="📋 Event Monitor" FontSize="18" FontWeight="SemiBold" 
                                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                            <TextBlock Text="Automated restore point creation" FontSize="13" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <ToggleButton Style="{StaticResource HyperOSToggle}" 
                                                      HorizontalAlignment="Right" VerticalAlignment="Top"
                                                      IsChecked="True"/>
                                    </Grid>

                                    <!-- Inner Glass Panel -->
                                    <Border Background="#11FFFFFF" CornerRadius="12" Padding="18" Margin="0,0,0,20"
                                            BorderThickness="1" BorderBrush="#22FFFFFF">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Monitored Events" FontWeight="SemiBold" FontSize="15" 
                                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                                <TextBlock Text="• Critical system errors (ID: 1001)" FontSize="12" 
                                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,3"/>
                                                <TextBlock Text="• Application crashes (ID: 1000)" FontSize="12" 
                                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,3"/>
                                                <TextBlock Text="• Service failures (ID: 7034)" FontSize="12" 
                                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                            <Border Grid.Column="1" Background="{StaticResource AccentBrush}" 
                                                    CornerRadius="16" Width="32" Height="32">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#007AFF" Opacity="0.4" ShadowDepth="0" BlurRadius="12"/>
                                                </Border.Effect>
                                                <TextBlock Text="3" FontSize="16" FontWeight="Bold" Foreground="White"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="12" FontSize="24" FontWeight="Bold" 
                                                       Foreground="{StaticResource AccentBrush}"/>
                                            <TextBlock Text="Restore points" FontSize="13" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="2h ago" FontSize="24" FontWeight="Bold" 
                                                       Foreground="{StaticResource SuccessBrush}"/>
                                            <TextBlock Text="Last created" FontSize="13" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Grid>

                                    <Button Content="Create Manual Restore Point" Style="{StaticResource iOSButton}" 
                                            HorizontalAlignment="Stretch" Margin="0,0,0,12"/>

                                    <Button Content="Configure Events" Background="Transparent" 
                                            Foreground="{StaticResource AccentBrush}" BorderThickness="2" 
                                            BorderBrush="{StaticResource AccentBrush}" HorizontalAlignment="Stretch"
                                            Padding="20,12" FontWeight="Medium" FontSize="14">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="12" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#22007AFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!-- Auto Repair Glass Card -->
                            <Border Grid.Column="2" Style="{StaticResource GlassCard}">
                                <StackPanel>
                                    <Grid Margin="0,0,0,24">
                                        <StackPanel>
                                            <TextBlock Text="🔧 Auto Repair" FontSize="18" FontWeight="SemiBold" 
                                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                            <TextBlock Text="BSOD detection &amp; system repair" FontSize="13" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <ToggleButton Style="{StaticResource HyperOSToggle}" 
                                                      HorizontalAlignment="Right" VerticalAlignment="Top"
                                                      IsChecked="True"/>
                                    </Grid>

                                    <!-- Warning Glass Panel -->
                                    <Border Background="#22FF9500" CornerRadius="12" Padding="18" Margin="0,0,0,20"
                                            BorderThickness="2" BorderBrush="{StaticResource WarningBrush}">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#FF9500" Opacity="0.2" ShadowDepth="0" BlurRadius="16"/>
                                        </Border.Effect>
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="⚠️" FontSize="16" Margin="0,0,10,0"/>
                                                <TextBlock Text="Recent BSOD Detected" FontWeight="SemiBold" FontSize="15"
                                                           Foreground="{StaticResource WarningBrush}"/>
                                            </StackPanel>
                                            <TextBlock Text="SYSTEM_SERVICE_EXCEPTION" FontSize="13" FontFamily="Consolas"
                                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                            <TextBlock Text="Auto-repair initiated: DISM + SFC scan" FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Border>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="2" FontSize="24" FontWeight="Bold" 
                                                       Foreground="{StaticResource WarningBrush}"/>
                                            <TextBlock Text="BSODs detected" FontSize="13" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="95%" FontSize="24" FontWeight="Bold" 
                                                       Foreground="{StaticResource SuccessBrush}"/>
                                            <TextBlock Text="Repair success" FontSize="13" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Grid>

                                    <Button Content="Run Manual Scan" Style="{StaticResource iOSButton}" 
                                            HorizontalAlignment="Stretch" Margin="0,0,0,12"/>

                                    <Button Content="View BSOD History" Background="Transparent" 
                                            Foreground="{StaticResource AccentBrush}" BorderThickness="2" 
                                            BorderBrush="{StaticResource AccentBrush}" HorizontalAlignment="Stretch"
                                            Padding="20,12" FontWeight="Medium" FontSize="14">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="12" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#22007AFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Activity Log Glass Panel -->
                        <Border Style="{StaticResource GlassCard}">
                            <StackPanel>
                                <TextBlock Text="📊 Recent Activity" FontSize="18" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>

                                <ItemsControl>
                                    <Border Background="#11FFFFFF" CornerRadius="10" Padding="16" Margin="0,0,0,12"
                                            BorderThickness="1" BorderBrush="#22FFFFFF">
                                        <Grid>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Style="{StaticResource StatusIndicator}" 
                                                        Background="{StaticResource SuccessBrush}"/>
                                                <TextBlock Text="Restore point created automatically" FontWeight="Medium" FontSize="14"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                            </StackPanel>
                                            <TextBlock Text="2:30 PM" FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </Border>

                                    <Border Background="#11FFFFFF" CornerRadius="10" Padding="16" Margin="0,0,0,12"
                                            BorderThickness="1" BorderBrush="#22FFFFFF">
                                        <Grid>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Style="{StaticResource StatusIndicator}" 
                                                        Background="{StaticResource WarningBrush}"/>
                                                <TextBlock Text="BSOD detected, auto-repair completed" FontWeight="Medium" FontSize="14"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                            </StackPanel>
                                            <TextBlock Text="11:45 AM" FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </Border>

                                    <Border Background="#11FFFFFF" CornerRadius="10" Padding="16"
                                            BorderThickness="1" BorderBrush="#22FFFFFF">
                                        <Grid>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Style="{StaticResource StatusIndicator}" 
                                                        Background="{StaticResource AccentBrush}"/>
                                                <TextBlock Text="Event monitoring started" FontWeight="Medium" FontSize="14"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                            </StackPanel>
                                            <TextBlock Text="9:00 AM" FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </Border>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>