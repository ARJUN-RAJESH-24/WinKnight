<Window x:Class="WinKnightUI.StartupSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinKnight - Starting Up"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Height="400" Width="600"
        Topmost="True">
    
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0B1A31"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3498DB"/>
        <SolidColorBrush x:Key="FontPrimary" Color="#FFFFFF"/>
        
        <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LoadingRotate" 
                           Storyboard.TargetProperty="Angle"
                           From="0" To="360" Duration="0:0:2"/>
        </Storyboard>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="20"
            BorderThickness="2"
            BorderBrush="{StaticResource AccentBlue}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Logo and Title -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Viewbox Width="80" Height="80" Margin="0,0,0,20">
                    <Canvas Width="24" Height="24">
                        <!-- Shield Icon -->
                        <Path Fill="{StaticResource AccentBlue}" 
                              Data="M12,1 L3,5 L3,11 C3,16.55 6.84,21.74 12,23 C17.16,21.74 21,16.55 21,11 L21,5 L12,1 Z"/>
                        <Path Fill="{StaticResource FontPrimary}" 
                              Data="M16,11 L11,16 L8,13 L9.5,11.5 L11,13 L14.5,9.5 L16,11 Z"/>
                    </Canvas>
                </Viewbox>
                
                <TextBlock Text="WIN KNIGHT" 
                         Foreground="{StaticResource FontPrimary}"
                         FontSize="28"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,10"/>
                
                <TextBlock Text="System Guardian"
                         Foreground="{StaticResource AccentBlue}"
                         FontSize="16"
                         HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,40">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ›¡ï¸" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText" 
                             Text="Initializing System Protection..." 
                             Foreground="{StaticResource FontPrimary}"
                             FontSize="14"/>
                </StackPanel>
                
                <ProgressBar x:Name="LoadingProgress" 
                           Height="6" 
                           Width="300" 
                           Margin="0,15,0,0"
                           Foreground="{StaticResource AccentBlue}"
                           IsIndeterminate="True"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <TextBlock Text="âš¡" FontSize="12" Margin="0,0,5,0"/>
                    <TextBlock x:Name="LoadingText" 
                             Text="Loading modules..." 
                             Foreground="{StaticResource FontPrimary}"
                             FontSize="11"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>