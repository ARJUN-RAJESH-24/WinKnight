<Window x:Class="WinKnightUI.StartupSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinKnight - Loading" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Height="500" Width="700"
        Topmost="True">
    
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0B1A31"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3498DB"/>
        <SolidColorBrush x:Key="AccentLightBlue" Color="#5DADE2"/>
        <SolidColorBrush x:Key="FontPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="FontSecondary" Color="#8796A6"/>

        <!-- Knight Shield Animation -->
        <Storyboard x:Key="ShieldAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ShieldScale" 
                           Storyboard.TargetProperty="ScaleX"
                           From="1.0" To="1.2" Duration="0:0:1.5" 
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="ShieldScale" 
                           Storyboard.TargetProperty="ScaleY"
                           From="1.0" To="1.2" Duration="0:0:1.5" 
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="ShieldRotate" 
                           Storyboard.TargetProperty="Angle"
                           From="0" To="5" Duration="0:0:1.5" 
                           AutoReverse="True"/>
        </Storyboard>

        <!-- Glow Pulse Animation -->
        <Storyboard x:Key="GlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GlowEffect" 
                           Storyboard.TargetProperty="Opacity"
                           From="0.7" To="1.0" Duration="0:0:1" 
                           AutoReverse="True"/>
            <ColorAnimation Storyboard.TargetName="GlowEffect" 
                          Storyboard.TargetProperty="Color"
                          From="#3498DB" To="#5DADE2" Duration="0:0:1"
                          AutoReverse="True"/>
        </Storyboard>

        <!-- Text Glow Animation -->
        <Storyboard x:Key="TextGlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="TextGlow" 
                           Storyboard.TargetProperty="Opacity"
                           From="0.5" To="1.0" Duration="0:0:1.2" 
                           AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="25"
            BorderThickness="3"
            BorderBrush="{StaticResource AccentBlue}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Animated Shield Logo -->
            <Viewbox Grid.Row="0" Stretch="Uniform" Margin="60,40,60,20">
                <Grid Width="150" Height="150">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="ShieldScale" ScaleX="1" ScaleY="1"/>
                            <RotateTransform x:Name="ShieldRotate" Angle="0"/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    
                    <!-- Outer Glow -->
                    <Ellipse Width="140" Height="140" 
                            Fill="{StaticResource AccentBlue}" 
                            Opacity="0.3">
                        <Ellipse.Effect>
                            <BlurEffect Radius="20"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    
                    <!-- Shield Background -->
                    <Ellipse Width="120" Height="120" 
                            Fill="{StaticResource AccentBlue}">
                        <Ellipse.Effect>
                            <DropShadowEffect x:Name="GlowEffect" 
                                            BlurRadius="25" 
                                            Color="#3498DB" 
                                            ShadowDepth="0" 
                                            Opacity="0.8"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    
                    <!-- Knight Icon -->
                    <Viewbox Stretch="Uniform" Margin="25">
                        <TextBlock Text="⚔️" 
                                  FontSize="40"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Foreground="White"/>
                    </Viewbox>
                </Grid>
            </Viewbox>

            <!-- App Name with Glow -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,5">
                <TextBlock Text="WIN KNIGHT"
                          Foreground="{StaticResource FontPrimary}"
                          FontSize="32"
                          FontWeight="Bold"
                          HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect x:Name="TextGlow" 
                                        BlurRadius="15" 
                                        Color="#3498DB" 
                                        ShadowDepth="0" 
                                        Opacity="0.7"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <TextBlock Text="System Guardian"
                          Foreground="{StaticResource AccentLightBlue}"
                          FontSize="16"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Loading Message -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" 
                       HorizontalAlignment="Center" Margin="0,20,0,10">
                <TextBlock Text="Securing your system" 
                          Foreground="{StaticResource FontSecondary}"
                          FontSize="14"
                          Margin="0,0,10,0"/>
                <TextBlock x:Name="LoadingDots" 
                          Text="..."
                          Foreground="{StaticResource AccentLightBlue}"
                          FontSize="14"
                          FontWeight="Bold"/>
            </StackPanel>

            <!-- Progress Bar -->
            <Border Grid.Row="3" 
                    Background="#1A2B42" 
                    Height="8" 
                    CornerRadius="4" 
                    Margin="40,0,40,30">
                <Border x:Name="ProgressFill" 
                        Background="{StaticResource AccentBlue}" 
                        Height="8" 
                        CornerRadius="4" 
                        HorizontalAlignment="Left" 
                        Width="0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" 
                                        Color="#3498DB" 
                                        ShadowDepth="0" 
                                        Opacity="0.6"/>
                    </Border.Effect>
                </Border>
            </Border>
        </Grid>
    </Border>
</Window>