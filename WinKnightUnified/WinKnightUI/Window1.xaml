<Window x:Class="WinKnightUI.RestorePointWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WinKnightUI"
        Title="Restore Points"
        Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#0B1A31"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#182A41"/>
        <SolidColorBrush x:Key="FontWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="FontGray" Color="#8796A6"/>

        <Style x:Key="PillButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5DADE2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Background="#0A1828" Grid.Row="0">
            <TextBlock Text="Restore Points" Foreground="White" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0">
                <Button Content="—" Click="Minimize_Click" Style="{StaticResource PillButton}" Width="30" Height="30"/>
                <Button Content="×" Click="Close_Click" Style="{StaticResource PillButton}" Width="30" Height="30" Margin="6,0"/>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Restore Points List -->
            <Border Grid.Column="0" Background="{StaticResource CardBrush}" CornerRadius="12" Padding="15" Margin="0,10,10,10">
                <StackPanel>
                    <TextBlock Text="Available Restore Points" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock x:Name="StatusText" Text="Loading..." Foreground="#8796A6" Margin="0,4,0,10"/>
                    <ListView x:Name="RestoreListView" Background="Transparent" BorderThickness="0" Foreground="White">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:RestorePointModel}">
                                <Border Background="#182A41" CornerRadius="10" Padding="10" Margin="0,6,0,6">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Description}" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding CreationTime}" Foreground="#8796A6" FontSize="13"/>
                                        <TextBlock Text="{Binding SourceType}" Foreground="#FFD700" FontSize="13"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <Border Grid.Column="1" Background="{StaticResource CardBrush}" CornerRadius="12" Padding="15" Margin="10,10,0,10">
                <StackPanel>
                    <TextBlock Text="Actions" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                    <Button x:Name="CreateButton" Content="Create Restore Point" Style="{StaticResource PillButton}" Margin="0,20,0,0" Click="CreateRestorePoint_Click"/>
                    <Button Content="Delete Selected" Style="{StaticResource PillButton}" Margin="0,10,0,0" Click="DeleteRestorePoint_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
