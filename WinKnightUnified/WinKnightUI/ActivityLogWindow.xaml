<Window x:Class="WinKnightUI.ActivityLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activity Log"
        Height="420"
        Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1A1A1A">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Activity Log"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0 0 0 15"/>

        <!-- List -->
        <Border Grid.Row="1"
                Background="#252525"
                CornerRadius="10"
                Padding="10"
                BorderBrush="#3A3A3A"
                BorderThickness="1">

            <ListBox x:Name="ActivityList"
                     FontSize="14"
                     Background="#252525"
                     Foreground="White"
                     BorderThickness="0"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </Border>

        <!-- Bottom Buttons -->
        <Grid Grid.Row="2" Margin="0 15 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Open File Location -->
            <Button Content="Open File Location"
                    Width="170"
                    Height="35"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Background="#333333"
                    Foreground="White"
                    BorderBrush="#555555"
                    Click="OpenFileLocation_Click"/>

            <!-- RIGHT: Refresh + Close -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="Refresh"
                        Width="100"
                        Height="35"
                        Margin="0 0 10 0"
                        Background="#333333"
                        Foreground="White"
                        BorderBrush="#555555"
                        Click="Refresh_Click"/>

                <Button Content="Close"
                        Width="100"
                        Height="35"
                        Background="#FF3B30"
                        Foreground="White"
                        BorderBrush="#AA1E1A"
                        Click="Close_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
