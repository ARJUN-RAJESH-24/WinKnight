<!-- 
    MainWindow.xaml
    This file contains the XAML code for the updated user interface of the WinKnight application.
    It has been redesigned to match the dark, modern dashboard layout, with a dynamic welcome card.
-->
<Window x:Class="WinKnightUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinKnight - System Guardian"
        Height="700" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0B1A31"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0B1A31"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#0A1828"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#182A41"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3498DB"/>
        <SolidColorBrush x:Key="AccentLightBlue" Color="#5DADE2"/>
        <SolidColorBrush x:Key="FontPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="FontSecondary" Color="#8796A6"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#2ECC71"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F1C40F"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C"/>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource FontSecondary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="8" Margin="0,4">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A2B42"/>
                    <Setter Property="Foreground" Value="{StaticResource FontPrimary}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#122030"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- General Card Style -->
        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.2" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button style with a border and corner radius -->
        <Style x:Key="ChromeButton" TargetType="Button">
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="Foreground" Value="{StaticResource FontPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Updated PillButton Style with ControlTemplate -->
        <Style x:Key="PillButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentLightBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <StackPanel Margin="20,30,20,0">
                <TextBlock Text="WIN KNIGHT" 
                           Foreground="{StaticResource FontPrimary}" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Sidebar Buttons -->
                <Button Content="Dashboard" Style="{StaticResource SidebarButton}"/>
                <Button Content="Restore Points" Style="{StaticResource SidebarButton}"/>
                <Button Content="Settings" Style="{StaticResource SidebarButton}"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Dashboard"
                           Foreground="{StaticResource FontPrimary}"
                           FontSize="28"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Width="30" Height="30" Content="—" Click="Minimize_Click" Style="{StaticResource ChromeButton}"/>
                    <Button Width="30" Height="30" Content="▢" Click="MaxRestore_Click" Style="{StaticResource ChromeButton}" Margin="6,0"/>
                    <Button Width="30" Height="30" Content="×" Click="Close_Click" Style="{StaticResource ChromeButton}"/>
                </StackPanel>
            </Grid>

            <!-- Cards Section -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Welcome Card -->
                <Border Grid.ColumnSpan="2" Style="{StaticResource DashboardCard}" Margin="0,0,15,15" Height="250">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Grid.Column="0" Width="100" Height="100" Margin="0,0,20,0">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="https://placehold.co/100x100/3498DB/FFFFFF?text=AVATAR"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Welcome back," Foreground="{StaticResource FontPrimary}" FontSize="24" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">
                                <TextBlock x:Name="WelcomeNameText" Text="Mark Johnson" Foreground="{StaticResource FontPrimary}" FontSize="48" FontWeight="Bold" VerticalAlignment="Center"/>
                                <Image x:Name="WelcomeImage" Margin="20,0,0,0" Height="120" Width="120" Stretch="UniformToFill" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Glad to see you again!" Foreground="{StaticResource FontPrimary}" FontSize="18" Margin="0,10,0,0"/>
                            <TextBlock Text="Ask me anything." Foreground="{StaticResource FontPrimary}" FontSize="18" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Restore Point Card -->
                <Border Grid.Column="2" Style="{StaticResource DashboardCard}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="RestoreGuard" Foreground="{StaticResource FontPrimary}" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock Text="Create a new system restore point" Foreground="{StaticResource FontSecondary}" Margin="0,5,0,15"/>
                        <Button x:Name="CreateRestoreButton" Content="Create Manual Restore Point" Style="{StaticResource PillButton}" Click="CreateRestore_Click"/>
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Center">
                            <TextBlock Text="Last backup:" Foreground="{StaticResource FontSecondary}"/>
                            <TextBlock x:Name="LastRestoreText" Text=" N/A" Foreground="{StaticResource FontPrimary}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Remaining Cards Section -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Manual Scan Card -->
                <Border Grid.Column="0" Style="{StaticResource DashboardCard}" Margin="0,0,15,0">
                    <StackPanel>
                        <TextBlock Text="System Scan" Foreground="{StaticResource FontPrimary}" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock Text="Run diagnostics to check for issues" Foreground="{StaticResource FontSecondary}" Margin="0,5,0,15"/>
                        <Button x:Name="RunScanButton" Content="Run Full System Scan" Style="{StaticResource PillButton}" Click="RunScan_Click"/>
                        <ProgressBar x:Name="ScanProgressBar" Height="8" Margin="0,15,0,0" IsIndeterminate="False"/>
                    </StackPanel>
                </Border>

                <!-- Report and Log Card -->
                <Border Grid.Column="1" Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Activity Log" Foreground="{StaticResource FontPrimary}" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock x:Name="CurrentStatusText" Text="Idle..." Foreground="{StaticResource FontSecondary}" Margin="0,5,0,10"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                            <TextBlock x:Name="ReportLogText" Text="Scan reports will appear here..." Foreground="{StaticResource FontPrimary}" TextWrapping="Wrap" FontSize="13" LineHeight="18"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
