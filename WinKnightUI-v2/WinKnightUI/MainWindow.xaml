<Window x:Class="WinKnightUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinKnight - System Guardian"
        Height="700" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0B1A31"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0B1A31"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#0A1828"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#182A41"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3498DB"/>
        <SolidColorBrush x:Key="AccentLightBlue" Color="#5DADE2"/>
        <SolidColorBrush x:Key="FontPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="FontSecondary" Color="#8796A6"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#2ECC71"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F1C40F"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C"/>

        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource FontSecondary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="8" Margin="0,4">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A2B42"/>
                    <Setter Property="Foreground" Value="{StaticResource FontPrimary}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#122030"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.2" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ChromeButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource FontPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PillButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentLightBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MetricCardButton" TargetType="Button">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource DashboardCard}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#25354D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <StackPanel Margin="20,30,20,0">
                <TextBlock Text="WIN KNIGHT"
                           Foreground="{StaticResource FontPrimary}"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <Button Content="Dashboard" Style="{StaticResource SidebarButton}"/>
                <Button Content="Restore Points" Style="{StaticResource SidebarButton}"/>
                <Button Content="Settings" Style="{StaticResource SidebarButton}"/>

            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Dashboard"
                           Foreground="{StaticResource FontPrimary}"
                           FontSize="28"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Width="30" Height="30" Content="—" Click="Minimize_Click" Style="{StaticResource ChromeButton}"/>
                    <Button Width="30" Height="30" Content="▢" Click="MaxRestore_Click" Style="{StaticResource ChromeButton}" Margin="6,0"/>
                    <Button Width="30" Height="30" Content="×" Click="Close_Click" Style="{StaticResource ChromeButton}"/>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.ColumnSpan="2" Style="{StaticResource DashboardCard}" Margin="0,0,15,15" Height="250">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Grid.Column="0" Width="100" Height="100" Margin="0,0,20,0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="https://placehold.co/100x100/3498DB/FFFFFF?text=AVATAR"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Welcome back," Foreground="{StaticResource FontPrimary}" FontSize="24" FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">
                                        <TextBlock x:Name="WelcomeNameText" Text="Mark Johnson" Foreground="{StaticResource FontPrimary}" FontSize="48" FontWeight="Bold" VerticalAlignment="Center"/>
                                        <Image x:Name="WelcomeImage" Margin="20,0,0,0" Height="120" Width="120" Stretch="UniformToFill" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="Glad to see you again!" Foreground="{StaticResource FontPrimary}" FontSize="18" Margin="0,10,0,0"/>
                                    <TextBlock Text="Ask me anything." Foreground="{StaticResource FontPrimary}" FontSize="18" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource DashboardCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="RestoreGuard" Foreground="{StaticResource FontPrimary}" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock Text="Create a new system restore point" Foreground="{StaticResource FontSecondary}" Margin="0,5,0,15"/>
                                <Button x:Name="CreateRestoreButton" Content="Create Manual Restore Point" Style="{StaticResource PillButton}" Click="CreateRestore_Click"/>
                                <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Center">
                                    <TextBlock Text="Last backup:" Foreground="{StaticResource FontSecondary}"/>
                                    <TextBlock x:Name="LastRestoreText" Text=" N/A" Foreground="{StaticResource FontPrimary}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource DashboardCard}" Margin="0,0,15,0">
                            <Grid>
                                <Button Style="{StaticResource MetricCardButton}" Click="CpuTemp_Click">
                                    <Viewbox Stretch="Uniform">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <TextBlock Text="🌡️" Foreground="{StaticResource FontPrimary}" FontSize="24" Margin="0,0,10,0"/>
                                                <TextBlock Text="CPU Temp" Foreground="{StaticResource FontPrimary}" FontSize="18" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            <TextBlock x:Name="CpuTempText" Text="--°C" Foreground="{StaticResource FontPrimary}" FontSize="50" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Viewbox>
                                </Button>
                                <Button x:Name="TempWarningButton" Click="TempWarning_Click" Cursor="Hand" Background="Transparent" BorderThickness="0" Padding="0"
                                        HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed" Margin="0, -10, -10, 0">
                                    <Border x:Name="TempWarningBox" Background="#E74C3C" CornerRadius="5" Padding="5">
                                        <TextBlock Text="!" FontWeight="Bold" Foreground="White" FontSize="16"/>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Visibility, ElementName=TempWarningButton}" Value="Visible">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard Name="BlinkAnimationStoryboard">
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.2" Duration="0:0:0.5" AutoReverse="True"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <StopStoryboard BeginStoryboardName="BlinkAnimationStoryboard"/>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </Button>
                            </Grid>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource DashboardCard}" Margin="0,0,15,0">
                            <Grid>
                                <Button Style="{StaticResource MetricCardButton}" Click="RamUsage_Click">
                                    <Viewbox Stretch="Uniform">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <TextBlock Text="💾" Foreground="{StaticResource FontPrimary}" FontSize="24" Margin="0,0,10,0"/>
                                                <TextBlock Text="RAM Usage" Foreground="{StaticResource FontPrimary}" FontSize="18" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            <TextBlock x:Name="RamUsageText" Text="--%" Foreground="{StaticResource FontPrimary}" FontSize="50" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Viewbox>
                                </Button>
                                <Button x:Name="RamWarningButton" Click="RamWarning_Click" Cursor="Hand" Background="Transparent" BorderThickness="0" Padding="0"
                                        HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed" Margin="0, -10, -10, 0">
                                    <Border x:Name="RamWarningBox" Background="#E74C3C" CornerRadius="5" Padding="5">
                                        <TextBlock Text="!" FontWeight="Bold" Foreground="White" FontSize="16"/>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Visibility, ElementName=RamWarningButton}" Value="Visible">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard Name="BlinkAnimationStoryboard2">
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.2" Duration="0:0:0.5" AutoReverse="True"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <StopStoryboard BeginStoryboardName="BlinkAnimationStoryboard2"/>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </Button>
                            </Grid>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource DashboardCard}" Margin="0,0,15,0">
                            <Button Style="{StaticResource MetricCardButton}" Click="DiskHealth_Click">
                                <Viewbox Stretch="Uniform">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBlock Text="💽" Foreground="{StaticResource FontPrimary}" FontSize="24" Margin="0,0,10,0"/>
                                            <TextBlock Text="Disk Health" Foreground="{StaticResource FontPrimary}" FontSize="18" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <TextBlock x:Name="DiskHealthText" Text="Good" Foreground="{StaticResource FontPrimary}" FontSize="40" FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=DiskHealthText}" Value="Low Disk Space">
                                                            <DataTrigger.EnterActions>
                                                                <BeginStoryboard Name="BlinkAnimationStoryboard3">
                                                                    <Storyboard RepeatBehavior="Forever">
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.2" Duration="0:0:0.5" AutoReverse="True"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                            <DataTrigger.ExitActions>
                                                                <StopStoryboard BeginStoryboardName="BlinkAnimationStoryboard3"/>
                                                            </DataTrigger.ExitActions>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Viewbox>
                            </Button>
                        </Border>

                        <Border Grid.Column="3" Style="{StaticResource DashboardCard}">
                            <Button Style="{StaticResource MetricCardButton}" Click="StartupManager_Click">
                                <Viewbox Stretch="Uniform">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBlock Text="🚀" Foreground="{StaticResource FontPrimary}" FontSize="24" Margin="0,0,10,0"/>
                                            <TextBlock Text="Startup Manager" Foreground="{StaticResource FontPrimary}" FontSize="18" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <TextBlock x:Name="StartupProgramsText" Text="--" Foreground="{StaticResource FontPrimary}" FontSize="50" FontWeight="Bold"/>
                                    </StackPanel>
                                </Viewbox>
                            </Button>
                        </Border>
                    </Grid>

                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource DashboardCard}" Margin="0,0,15,0">
                            <StackPanel>
                                <TextBlock Text="System Scan" Foreground="{StaticResource FontPrimary}" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock Text="Run diagnostics to check for issues" Foreground="{StaticResource FontSecondary}" Margin="0,5,0,15"/>
                                <Button x:Name="RunScanButton" Content="Run Full System Scan" Style="{StaticResource PillButton}" Click="RunScan_Click"/>
                                <ProgressBar x:Name="ScanProgressBar" Height="8" Margin="0,15,0,0" IsIndeterminate="False"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource DashboardCard}">
                            <StackPanel>
                                <TextBlock Text="Activity Log" Foreground="{StaticResource FontPrimary}" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock x:Name="CurrentStatusText" Text="Idle..." Foreground="{StaticResource FontSecondary}" Margin="0,5,0,10"/>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                                    <TextBlock x:Name="ReportLogText" Text="Scan reports will appear here..." Foreground="{StaticResource FontPrimary}" TextWrapping="Wrap" FontSize="13" LineHeight="18"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>